@model List<EFDBFirstApproachNew.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Produts</h2>
<form class="form-inline" action="/product/index">
    @Html.Label("Search",new { @class = "mr-1" })
    @Html.TextBox("Search",  ViewBag.Search as string,new { @class= "form-control mr-1",placeholder= "Search" })
  
    <button type="submit" class="btn btn-primary">GO</button>
</form>
<table class="table">

    <tr class="table-secondary">
        <th>Photo</th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
