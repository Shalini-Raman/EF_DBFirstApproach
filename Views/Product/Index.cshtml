                }
            }
            else
            {
                <a href="/product/index?SortColumn=ProductName&IconClass=fa-sort-desc&pageNo=1">ProductName</a>
                if (ViewBag.SortColumn == "ProductName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:5%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
            <a href="/product/index?SortColumn=Price&IconClass=fa-sort-asc&pageNo=1">Price</a>
